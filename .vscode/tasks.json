{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-G",
                "Ninja",
            ],
            "group": "build",
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
            ],
            "group": "build",
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${cwd}\\build\\runtime\\runtime.exe",
            "args": [
                "${cwd}\\tests\\project",
            ],
            "group": "none",
        }
    ]
}